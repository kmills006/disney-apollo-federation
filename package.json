{
  "name": "disney-apollo-federation",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "git@github.com:kmills006/disney-apollo-federation.git",
  "author": "Kristy Miller <kristy@kmills.co>",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "services/*"
    ]
  },
  "commitlint": {
    "extends": "@commitlint/config-conventional"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "scripts": {
    "dev:attractions": "yarn --cwd ./services/attractions start:dev",
    "dev:parks": "yarn --cwd ./services/parks start:dev",
    "dev": "concurrently \"yarn:dev:*\""
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "concurrently": "^5.3.0",
    "husky": "^4.3.0",
    "lerna": "^3.22.1"
  }
}
